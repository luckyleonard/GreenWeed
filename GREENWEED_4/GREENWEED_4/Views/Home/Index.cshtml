

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_mytemplate.cshtml";

    
}

<section class="call-to-action" id="explore">
    <h1 class="h1">Explore Your Area</h1>

    <!-- search by postcode -->

    <div class="flexsearch">
        <div class="flexsearch--wrapper">
            <form class="flexsearch--form" action="#" method="post">
                <div class="flexsearch--input-wrapper">
                    <input id="postcode" name="postcode" class="flexsearch--input" type="search" placeholder="postcode only (e.g. 3145)">
                </div>
                <input class="flexsearch--submit" type="button" value="&#10140;" onclick="showResult();" />
                <div id="errors">
                </div>
            </form>
        </div>
    </div>
</section>

<script> 
    function showResult() {
        var x = document.getElementById("postcode").value;
        if (x == "3145") {
            document.getElementById('errors').innerHTML = "*Here are the results for 3145*";
            document.getElementById("resultTable").style.display = "inline";
        }
        else {
            document.getElementById('errors').innerHTML = "*No result by this postcode*";
            document.getElementById("resultTable").style.display = "none";
        }
    };
</script>

<section class="container" id="resultTable" style="display:none">
    <div class="container" id="wrapper">
        <h1>Table of Search Result</h1>

        <table id="keywords" cellspacing="0" cellpadding="0">
