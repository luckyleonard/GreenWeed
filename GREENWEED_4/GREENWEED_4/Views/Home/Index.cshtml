<!-- ***javascrpt for the showResult() function, according to user input to give back the corresponding result.
    would be more completed in Iteration 2 combines the API functions.***-->
<script>
    function clickPress(event) {
        if (event.keyCode == 13) {
            $('#enter-go').focus().click();
            event.preventDefault();
        }
    }

    function showResult() { //input validation and show result
        var x = document.getElementById("postcode").value;//get the input value
        var regPostcode = /^([0-9]{4})$/;
        if (regPostcode.test(x) == true) {
            if ((x.charAt(0) == "3") || (x.charAt(0) == "8")){
                 if (x == "3145") {
                     location.href = '#explore';
                     document.getElementById("resultTable").style.display = "inline";//make table visible
                 }
                else { //validate the input is a victorian postcode
                     document.getElementById('errors').innerHTML = "***Congrats! No invasive plant found Here!***";//error message
                     document.getElementById("resultTable").style.display = "none";//make table keep unvisible
                 }
            }
            else {
                document.getElementById('errors').innerHTML = "*Sorry, Victoria postcode only(3xxx or 8xxx).*";
                document.getElementById("resultTable").style.display = "none";//make table keep unvisible
            }
        }
        else {
            document.getElementById('errors').innerHTML = "*Sorry, " + x + " is not a valid Austrailian postcode.*";//error message
            document.getElementById("resultTable").style.display = "none";//make table keep unvisible
        }
    };
</script>


